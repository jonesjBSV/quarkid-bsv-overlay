{
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "es2021"
    ],
    "experimentalDecorators": true,
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "outDir": "./artifacts",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "noEmit": true,
    "include": [
      "src/contracts/**/*.ts"
    ]
  }
}